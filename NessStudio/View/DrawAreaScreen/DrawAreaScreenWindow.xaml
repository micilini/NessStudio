<Window x:Class="NessStudio.View.DrawAreaScreen.DrawAreaScreenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Draw Area"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="#01000000"
        Topmost="True"
        ShowInTaskbar="False"
        WindowStartupLocation="Manual"
        KeyDown="Window_KeyDown"
        PreviewMouseLeftButtonUp="Window_PreviewMouseLeftButtonUp"
        Loaded="Window_Loaded">
    <Canvas x:Name="RootCanvas">
        <Rectangle Fill="#66000000" Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Window}}"
                   Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Window}}"/>

        <Rectangle x:Name="SelectionRect"
                   Stroke="Red" StrokeThickness="5"
                   StrokeDashArray="6,6"
                   Fill="#20000000"
                   Cursor="SizeAll"
                   MouseLeftButtonDown="SelectionRect_MouseLeftButtonDown"
                   MouseMove="SelectionRect_MouseMove"
                   MouseLeftButtonUp="SelectionRect_MouseLeftButtonUp"/>

        <Border x:Name="Hud"
                Background="#AA000000"
                CornerRadius="6"
                Padding="6"
                Opacity="0.9">
            <StackPanel Orientation="Vertical">
                <TextBlock x:Name="SizeText"
                           FontSize="16"
                           Foreground="White"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Text="0 x 0"/>
                <TextBlock Margin="0,4,0,0"
                           FontSize="12"
                           Foreground="#FFE0E0E0"
                           HorizontalAlignment="Center"
                           Text="[Enter] to continue   •   [Esc] to exit"/>
            </StackPanel>
        </Border>

        <Thumb x:Name="HandleNW" DragDelta="HandleNW_DragDelta" Width="14" Height="14" Background="Red" Cursor="SizeNWSE"/>
        <Thumb x:Name="HandleN"  DragDelta="HandleN_DragDelta"  Width="14" Height="14" Background="Red" Cursor="SizeNS"/>
        <Thumb x:Name="HandleNE" DragDelta="HandleNE_DragDelta" Width="14" Height="14" Background="Red" Cursor="SizeNESW"/>
        <Thumb x:Name="HandleE"  DragDelta="HandleE_DragDelta"  Width="14" Height="14" Background="Red" Cursor="SizeWE"/>
        <Thumb x:Name="HandleSE" DragDelta="HandleSE_DragDelta" Width="14" Height="14" Background="Red" Cursor="SizeNWSE"/>
        <Thumb x:Name="HandleS"  DragDelta="HandleS_DragDelta"  Width="14" Height="14" Background="Red" Cursor="SizeNS"/>
        <Thumb x:Name="HandleSW" DragDelta="HandleSW_DragDelta" Width="14" Height="14" Background="Red" Cursor="SizeNESW"/>
        <Thumb x:Name="HandleW"  DragDelta="HandleW_DragDelta"  Width="14" Height="14" Background="Red" Cursor="SizeWE"/>

    </Canvas>
</Window>